<%= simple_form_for @pin , html: { class: 'form-horizontal' } do |f| %>

  
  <%= f.input :name, label: false , error: 'Username is mandatory, please specify one',placeholder: 'Enter your name' %>
 
 
  <%= f.input :email, placeholder: 'user@domain.com',label: false %>
 
 
  <%= f.input :refer, placeholder: 'Enter your reference id if any',label: false %>
  
  <div class="mystyle">
  <%= f.input :remark, placeholder: 'Remark or query',label: false %>
  </div>
  <%= f.button :submit ,class: 'btn btn-default',data: { confirm: 'Are you sure you want to submit this form?' } %>
<% end %>
